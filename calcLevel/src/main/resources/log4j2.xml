<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%-5level %d{yyyy-MM-dd HH:mm:ss }[%class{36}]  %msg%n" />
		</Console>
		
		<RollingFile name="RollingFile" fileName="calcLevel_logs/calcLevelAll.log"
			filePattern="log/$${date:yyyy-MM}/calcLevel-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
		</RollingFile>
	</appenders>

	<loggers>
		<logger name="com.ttmv.datacenter.da.storm" level="info" additivity="true">
			<appender-ref ref="RollingFile" />
		</logger>
		<root level="info">
			<appender-ref ref="Console" />
		</root>
	</loggers>
</configuration>
